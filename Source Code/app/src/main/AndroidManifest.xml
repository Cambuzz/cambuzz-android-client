<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cambuzz.internetcabin.cambuzzvitcc" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NewAppTheme"
        android:name="com.cambuzz.internetcabin.cambuzzvitcc.app.AppController"
        >


        <activity
            android:name=".swipe.Majormain"
            android:label="Cambuzz"
            >
        </activity>


        <activity
            android:name=".LoginActivity"
            android:label="Cambuzz Vitcc"
            android:theme="@style/NewAppTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.LOGINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SignUp"
            android:label="Signup"
            android:theme="@style/NewAppTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.SIGNUPACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Teacher_Show"
            android:label="Cambuzz Vitcc"
            android:theme="@style/Theme.Transparent"
            >
            <intent-filter>
                <action android:name="android.intent.action.TEACHER_SHOW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Splash"
            android:label="Cambuzz Vitcc" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".About"
            android:label="Cambuzz Vitcc">
            <intent-filter>
                <action android:name="android.intent.action.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".Tutorial"
            android:label="Cambuzz Vitcc"
            android:theme="@style/Theme.Transparent"
            >
            <intent-filter>
                <action android:name="android.intent.action.TUTORIAL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <service android:name=".MyService"
            android:exported="false"
            />

        <receiver android:name=".MyReceiver"/>

    </application>

</manifest>
