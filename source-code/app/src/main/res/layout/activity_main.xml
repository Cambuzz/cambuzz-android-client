<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/drawerlayout"
    android:background="#ff918d8e">


    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/maincontainer"
        android:background="#ff918d8e">



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            >


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Unable to connect to network."
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="100dp"
                android:id="@+id/tv_unable_to_connect"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:layout_below="@+id/tv_unable_to_connect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:id="@+id/bt_refresh_feed_button"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="You can still track your teacher.\n(offline)"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/bt_refresh_feed_button"
                />

            <ListView
                android:layout_marginTop="0dp"
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
        </RelativeLayout>



    </FrameLayout>

</android.support.v4.widget.DrawerLayout>