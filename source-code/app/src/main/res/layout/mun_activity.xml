<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ff918d8e"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Unable to connect to network."
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:id="@+id/tv_unable_to_connect"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:layout_below="@+id/tv_unable_to_connect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/bt_refresh_mun_button"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="You can still track your teacher.\n(offline)"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/bt_refresh_mun_button"
        />


    <ListView
        android:id="@+id/list_mun"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_marginTop="2dp"
        />

</RelativeLayout>